<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_picasso_base"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bruce.chang.testpicasso.PicassoBaseActivity">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tv_picasso1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="普通加载"
            />
        <ImageView
            android:id="@+id/iv_picasso1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_picasso2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="裁剪的方式加载"
            />
        <ImageView
            android:id="@+id/iv_picasso2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_picasso3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="旋转90度加载"
            />
        <ImageView
            android:id="@+id/iv_picasso3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</ScrollView>


</LinearLayout>
